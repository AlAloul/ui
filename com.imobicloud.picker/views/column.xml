<Alloy>
	<View class="picker-column" onPostlayout="postlayout">
		<ListView id="list" class="picker-list" defaultItemTemplate="title" onItemclick="columnClick">
			<Templates>
	            <ItemTemplate name="title" class="picker-item">
	                <Label bindId="title" class="picker-item-title"/>
	            </ItemTemplate>
	            <ItemTemplate name="icon-title" class="picker-item">
	                <ImageView bindId="icon" class="picker-item-icon"/>
	                <Label bindId="title" class="picker-item-title"/>
	            </ItemTemplate>
	            <ItemTemplate name="icon" class="picker-item">
	                <ImageView bindId="icon" class="picker-item-icon"/>
	            </ItemTemplate>
	        </Templates>
		</ListView>
	</View>
</Alloy>